<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dimen_10dp">


        <TextView
            android:id="@+id/txCalBurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Calories Burnes"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="2dp" />
        <TextView
            android:id="@+id/txCalBurnNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3500"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="2dp" />


    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/txCalIntake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Calories intake"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="2dp" />
        <TextView
            android:id="@+id/txIntakeNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="999\nDays ago "
            android:textAlignment="center"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="2dp" />


    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/resultage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Result created"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="2dp" />
        <TextView
            android:id="@+id/txDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="999 day ago"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="2dp" />


    </android.support.v7.widget.LinearLayoutCompat>

    <ImageButton
        android:id="@+id/imageButtonDelete"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:elevation="0dp"
        card_view:srcCompat="@android:drawable/ic_menu_set_as"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="4dp" />
</android.support.v7.widget.LinearLayoutCompat>





